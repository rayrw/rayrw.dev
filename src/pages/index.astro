---
import { SITE_TITLE, SITE_DESCRIPTION, SITE_LOCALES } from '~/common/consts';
import Layout from '~/layouts/Layout.astro';
import Connect from '~/components/Connect.astro';
import PageSection from '~/components/PageSection.astro';

export function getStaticPaths() {
	return SITE_LOCALES.map((locale) => ({
		params: { locale },
	}));
}

const bio =
	'Hi there! I’m a Software Engineer based in Tokyo, Japan, specializing in web frontend development. I enjoy working with tools and frameworks like Astro, Svelte, React, Node.js, TypeScript, and Playwright. This website is where I share things I’m learning, building, or just curious about.';
---

<Layout head={{ title: SITE_TITLE, description: SITE_DESCRIPTION }}>
	<PageSection>
		<p class="mb-16">
			{bio}
		</p>

		<a href="/posts" class="underline">My blog posts →</a>
	</PageSection>

	<Connect />
</Layout>
